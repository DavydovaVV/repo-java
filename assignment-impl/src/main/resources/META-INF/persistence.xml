<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence">
    
    <persistence-unit name="PurchasePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/epamcourses?currentSchema=davydova"/>
            <property name="javax.persistence.jdbc.user" value="usr"/>
            <property name="javax.persistence.jdbc.password" value="pass"/>
            <property name="hibernate.id.new_generator_mappings" value="false" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.physical_naming_strategy"
                      value="com.vladmihalcea.hibernate.type.util.CamelCaseToSnakeCaseNamingStrategy"/>
        </properties>
    </persistence-unit>
</persistence>